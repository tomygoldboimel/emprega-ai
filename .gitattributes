###############################################################################
# Set default behavior to automatically normalize line endings.
###############################################################################
* text=auto

###############################################################################
# C# files
###############################################################################
*.cs text diff=csharp
*.csx text diff=csharp
*.csproj text
*.sln text eol=crlf

###############################################################################
# JavaScript/TypeScript/Vue files
###############################################################################
*.js text
*.ts text
*.vue text
*.json text
*.html text
*.css text
*.scss text
*.md text

###############################################################################
# Configuration files
###############################################################################
*.config text
*.xml text
*.yml text
*.yaml text

###############################################################################
# Shell scripts
###############################################################################
*.sh text eol=lf
*.bash text eol=lf

###############################################################################
# Image files (binary)
###############################################################################
*.jpg binary
*.jpeg binary
*.png binary
*.gif binary
*.ico binary
*.svg binary

###############################################################################
# Font files (binary)
###############################################################################
*.woff binary
*.woff2 binary
*.ttf binary
*.eot binary

###############################################################################
# Other binary files
###############################################################################
*.pdf binary
*.zip binary
*.dll binary
*.exe binary
